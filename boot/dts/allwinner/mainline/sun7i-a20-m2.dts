&pio {
	spi_gpio_pins_out: spi_gpio_pins_out {
		allwinner,pins = "PI7", "PI8", "PI9", "PI5";  // MOSI, SCLK, CS, RESET
		allwinner,function = "gpio_out";
		allwinner,drive = <1>;
		allwinner,pull = <0>;
	};

	spi_gpio_pins_in: spi_gpio_pins_in {
		allwinner,pins = "PI6";  // MISO
		allwinner,function = "gpio_in";
