&cpu0 {
	cpu-supply = <&reg_dcdc2>;
	operating-points = <
	/* kHz	  uV */
	1080000	1450000
	912000	1400000
	864000	1300000
	792000	1250000
	720000	1200000
	624000	1150000
	528000	1100000
	312000	1050000
	>;
};

&cpu1 {
	cpu-supply = <&reg_dcdc2>;
	operating-points = <
	/* kHz	  uV */
	1080000	1450000
	912000	1400000
	864000	1300000
	792000	1250000
	720000	1200000
	624000	1150000
	528000	1100000
	312000	1050000
	>;
};

&ahci {
	target-supply = <&reg_ahci_5v>;
	status = "okay";
};

&de {
	status = "okay";
};

&codec {
	//PAM8620: PH25, Low: enable output, High: disable output
	allwinner,pa-gpios = <&pio 7 25 GPIO_ACTIVE_HIGH>; /* PH25 */
	status = "okay";
};

&ehci0 {
	status = "okay";
};

&ehci1 {
	status = "okay";
};

&otg_sram {
	status = "okay";
};

&gmac {
	pinctrl-names = "default";
	pinctrl-0 = <&gmac_mii_pins>;
	phy-handle = <&phy1>;
	phy-mode = "mii";
	status = "okay";
};

&gmac_mdio {
	phy1: ethernet-phy@1 {
		reg = <1>;
	};
};

&hdmi {
	status = "okay";
};

&hdmi_out {
	hdmi_out_con: endpoint {
		remote-endpoint = <&hdmi_con_in>;
	};
};

// LVDS
&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm0_pin>; /* PB02 */
	status = "okay";
};

